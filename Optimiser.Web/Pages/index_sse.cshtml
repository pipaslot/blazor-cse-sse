@page "/"
@namespace Optimiser.Web.Pages
@using GeneralComponents
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blazor-SSE</title>
    <base href="~/" />
    <link rel="stylesheet" href="_content/GeneralComponents/css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="_content/GeneralComponents/css/site.css" />
</head>
<body>
    <app>
        <!-- SSE -->
        <app>
            <component type="typeof(App)" render-mode="ServerPrerendered" />
        </app>

        <div id="blazor-error-ui">
            <environment include="Staging,Production">
                An error has occurred. This application may no longer respond until reloaded.
            </environment>
            <environment include="Development">
                An unhandled exception has occurred. See browser dev tools for details.
            </environment>
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>

        <script src="_framework/blazor.server.js"></script>
        <script src="_content/Cloudcrate.AspNetCore.Blazor.Browser.Storage/Storage.js"></script>
</body>
</html>
