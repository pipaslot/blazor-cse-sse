<div class="@GetClasses()" style="@Style">@ChildContent</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string Size {get;set;}
    [Parameter]
    public string Style { get; set; }

    string GetClasses(){
        
        var sizes = (Size?? "")
            .Split(" ")
            .Where(i=>!string.IsNullOrWhiteSpace(i))
            .Select(i => "b-col-"+i)
            .ToArray();
        return sizes.Any()
            ? "b-col " + string.Join(" ",sizes)
            : "b-col";
    }
}